generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id @map("UserID")
  userName String @map("User Name")
  events   Event[]
}

model Group {
  groupId   BigInt @id @map("Group id")
  groupName String @map("Group Name")
  events    Event[]
}

model Event {
  eventId                 BigInt  @id @map("Event id")
  userId                  String  @map("user id")
  venueId                 BigInt  @map("venue id")
  groupId                 BigInt  @map("Group id")
  date                    DateTime @map("Date")
  venueTime               DateTime @map("venue time")
  startTime               DateTime @map("start time")
  endTime                 DateTime @map("end time")
  seat                    String  @map("seat")
  seatMemo                String  @map("seat memo")
  transportationMethod    String  @map("transportation method")
  placeOfDeparture        String  @map("place of departure")
  destination             String  @map("destination")
  transportationCost      BigInt  @map("transportation cost")
  trafficConditions       String  @map("traffic conditions")
  accommodation           String  @map("accommodation")
  accommodationCost       BigInt  @map("AccommodationCost")
  accommodationMemo       String  @map("Accommodation memo")
  visa                    Boolean @map("visa")
  visaCost                BigInt  @map("visa cost")
  enterCountryRequirements String @map("What you need when enter the country")
  goods                   String  @map("goods")
  goodsCost               BigInt  @map("goods cost")
  othersCost              BigInt  @map("others cost")
  othersDetails           String  @map("others details")
  totalCost               BigInt  @map("total cost")
  memo                    String  @map("memo")
  images                  Bytes   @map("images")

  user   User   @relation(fields: [userId], references: [userId])
  group  Group  @relation(fields: [groupId], references: [groupId])
  venue  Venue  @relation(fields: [venueId], references: [venueId])
}

model Venue {
  venueId   BigInt @id @map("venue id")
  venueName String @map("venue name")
  events    Event[]
}